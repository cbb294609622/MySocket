<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppSplash" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PermissionBlueStyle">
        <item name="PermissionTitleColor">@color/default_text</item>
        <item name="PermissionMsgColor">@color/default_text</item>
        <item name="PermissionItemTextColor">@color/default_text</item>
        <item name="PermissionButtonBackground">@drawable/shape_btn</item>
        <item name="PermissionBackround">@drawable/shape_bg_white</item>
        <item name="PermissionButtonTextColor">@android:color/white</item>
    </style>

    <style name="EditDefault_Alls">
        <item name="android:textColor">@color/txt_edit_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/txt_edit_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
